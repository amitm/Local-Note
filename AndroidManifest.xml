<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.digitalmasonry.localnote"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" 
    			 android:label="@string/app_name"
    			 android:debuggable="true">
        <activity android:name=".LocalNote"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
      	<activity android:name=".CreateNoteActivity" android:label="@string/createnoteactivity_name"/>
		<activity android:name=".MapNoteActivity" android:label="@string/mapnoteactivity_name"/>
		<uses-library android:name="com.google.android.maps" />
    </application>
    <uses-sdk android:minSdkVersion="2" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.INTERNET" />

</manifest> 